@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row mb-4">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">

            <fieldset>
                <legend class="mb-4">Simple search</legend>
                <div class="row mb-4">
                    <label for="minDate" class="col-sm-2 col-form-label">Min Date</label>
                    <div class="col-sm-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="row mb-4">
                    <label for="maxDate" class="col-sm-2 col-form-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend class="mb-4">Grouping search</legend>
                <div class="row mb-4">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="row mb-4">
                    <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>